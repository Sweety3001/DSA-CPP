{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile and Run with I/O Redirection",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-o",
        "${fileBasenameNoExtension}",
        "${file}",
        "&&",
        "if",
        "[",
        "-f",
        "input.txt",
        "];",
        "then",
        "./${fileBasenameNoExtension}",
        "<",
        "input.txt",
        ">",
        "output.txt;",
        "else",
        "echo",
        "'input.txt not found!';",
        "fi"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
